<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parentactivity"
    android:gravity="center"
    android:background="#fcfcfc"
    android:paddingLeft="9sp"
    android:paddingRight="10sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:clickable="true"
        android:onClick="logout"
        android:textStyle="bold|italic"
        android:background="@drawable/edittextbackground"
        />

    <LinearLayout
        android:layout_width="60sp"
        android:id="@+id/userchangeicon"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:layout_gravity="right">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="30sp"
            android:clickable="true"
            android:onClick="changechild"
            android:src="@drawable/changeuser"
            />

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l1"
        android:background="@color/backgroundcolor">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="location"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle3blue"
                    android:src="@drawable/location"
                    android:padding="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="10sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="See Live Location"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="message"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle4orange"
                    android:src="@drawable/ic_mms_black_24dp"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Message"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Send Message\nTo Watch"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l2"
        android:background="@color/backgroundcolor">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:onClick="health"
            android:layout_margin="10sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle1pink"
                    android:src="@drawable/stat"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Health Stat"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Checkout Health\nStatistics"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="remainder"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle2green"
                    android:src="@drawable/alarm"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Remainder"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Set Remainder"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/adduser">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="335sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="adduser"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle4red"
                    android:src="@drawable/adduser"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Add User"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />

                <TextView
                    android:layout_width="193dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="Add Users To Account"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>