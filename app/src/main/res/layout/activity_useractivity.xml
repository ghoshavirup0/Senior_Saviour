<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".useractivity"
    android:gravity="center"
    android:background="#fcfcfc"
    android:padding="10sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="20sp"
        android:layout_marginTop="-70sp"
        android:layout_gravity="left"
        android:clickable="true"
        android:onClick="logout"
        android:textStyle="bold|italic"
        android:background="@drawable/edittextbackground"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        >

    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l1"
        android:background="@color/backgroundcolor">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="pairwatch"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle4orange"
                    android:src="@drawable/watchface"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="90sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Pair Watch"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Choose Your \nWatch TobBe Paired"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="watchface"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle3blue"
                    android:src="@drawable/pairwatch"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="90sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Watch face"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Select Between\n12 or 24 Hour Format"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l2"
        android:background="@color/backgroundcolor">
        
        
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:onClick="heartbeat"
            android:layout_margin="10sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle4red"
                    android:src="@drawable/heart"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="99sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Heart Rate"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Checkout BPM"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l3">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="Alarm"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/circle2green"
                    android:src="@drawable/alarm"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="79sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Alarm"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:background="@color/lightgray"
                    android:layout_margin="10sp"

                    />

                <TextView
                    android:layout_width="114sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Set An Alarm"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </LinearLayout>



</LinearLayout>